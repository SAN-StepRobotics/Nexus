# Nexus Workflow Platform Environment Variables

# Database
DATABASE_URL="postgresql://nexus_user:nexus_password@localhost:5432/nexus_dev"
POSTGRES_DB="nexus_dev"
POSTGRES_USER="nexus_user"
POSTGRES_PASSWORD="nexus_password"

# Redis
REDIS_URL="redis://localhost:6379"
REDIS_PASSWORD=""

# NextAuth.js
NEXTAUTH_SECRET="your-secret-key-here-change-in-production"
NEXTAUTH_URL="http://localhost:3000"

# Google OAuth & Drive Integration
GOOGLE_CLIENT_ID="your-google-client-id-here"
GOOGLE_CLIENT_SECRET="your-google-client-secret-here"
GOOGLE_REDIRECT_URI="http://localhost:3000/api/auth/callback/google"

# Application Settings
NODE_ENV="development"
APP_URL="http://localhost:3000"
APP_NAME="Nexus Workflow Platform"

# File Upload Settings
MAX_FILE_SIZE="10485760" # 10MB in bytes
ALLOWED_FILE_TYPES="image/jpeg,image/png,image/gif,application/pdf,text/plain,application/msword,application/vnd.openxmlformats-officedocument.wordprocessingml.document"

# Email Configuration (Optional)
SMTP_HOST=""
SMTP_PORT="587"
SMTP_USER=""
SMTP_PASSWORD=""
SMTP_FROM="noreply@nexusworkflow.com"

# Monitoring (Production)
GRAFANA_PASSWORD="admin"

# Rate Limiting
RATE_LIMIT_MAX="100"
RATE_LIMIT_WINDOW="60000" # 1 minute in milliseconds

# Backup Settings (Production)
BACKUP_SCHEDULE="0 2 * * *" # Daily at 2 AM
BACKUP_RETENTION_DAYS="30"

# SSL Settings (Production)
SSL_CERT_PATH="/etc/nginx/ssl/cert.pem"
SSL_KEY_PATH="/etc/nginx/ssl/key.pem"